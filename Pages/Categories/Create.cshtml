@page
@model FunnyWebRazor.Pages.Categories.CreateModel
@{
}

<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Add new movie rating</h2>
        </div>

        <div asp-validation-summary="All"></div>

        <div class="mb-3">
            <label asp-for="Category.Name">Title</label>
            <input asp-for="Category.Name" type="text" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Rating">Rating</label>
            <input asp-for="Category.Rating" type="text" class="form-control" />
            <span asp-validation-for="Category.Rating" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Review">Review</label>
            <input asp-for="Category.Review" type="text" class="form-control" />
            <span asp-validation-for="Category.Review" class="text-danger"></span>
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Create</button>
            </div>
            <div class="col-6">
                <a asp-page="/categories/index" class="btn btn-secondary form-control">Back to list</a>
            </div>
        </div>


    </div>
</form>
