@page
@model FunnyWebRazor.Pages.Categories.DeleteModel
@{
}

<form method="post">
    <input asp-for="Category.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Category</h2>
        </div>
        <div class="mb-3">
            <label asp-for="Category.Name">Category name</label>
            <input asp-for="Category.Name" type="text" class="form-control" disabled />
        </div>
        <div class="mb-3">
            <label asp-for="Category.DisplayOrder">Display Order</label>
            <input asp-for="Category.DisplayOrder" type="text" class="form-control" disabled />
        </div>

        <div class="row">
            <div class="col-6">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6">
                <a asp-page="/categories/index" class="btn btn-secondary form-control">Back to List</a>
            </div>
        </div>


    </div>
</form>
